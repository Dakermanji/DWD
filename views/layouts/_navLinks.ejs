<!-- views/layouts/_navLinks.ejs -->
<% if (navBar.length > 0) { %>
	<% navBar.forEach(nav => { %>
		<li class="nav-item">
			<a class="nav-link"
			   <%= nav.id ? `id="${nav.id}"` : '' %>
			   href="<%= nav.link %>"
			   aria-label="<%= t(nav.label) %>">

				<span class="nav-icon" data-bs-toggle="tooltip" title="<%= t(nav.label) %>">
					<i class="bi <%= nav.icon %>"></i>
				</span>
				<span class="nav-text"><%= t(nav.label) %></span>
			</a>
		</li>
	<% }) %>
<% } %>

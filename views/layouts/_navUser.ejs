<!-- views/layouts/_navUser.ejs -->
<li class="nav-item">
	<a
		class="nav-link <%= currentRoute === '/dashboard' ? 'active' : '' %>"
		id="dashboard"
		href="/dashboard"
		aria-label="<%= t('nav.account') %>"
	>
		<span
			class="nav-icon"
			data-bs-toggle="tooltip"
			title="<%= t('nav.account') %>"
		>
			<i class="bi bi-person-circle"></i>
		</span>
		<span class="nav-text"><%= t('dashboard.title') %></span>
	</a>
</li>

<li class="nav-item">
	<a
		href="#"
		class="nav-link"
		id="socialToggle"
		aria-label="<%= t('nav.social') %>"
	>
		<span
			class="nav-icon"
			data-bs-toggle="tooltip"
			title="<%= t('nav.social') %>"
		>
			<i class="bi bi-people-fill"></i>
		</span>
		<span class="nav-text"><%= t('nav.social') %></span>
	</a>
</li>

<li class="nav-item">
	<form action="/auth/logout" method="POST" class="d-inline">
		<button
			type="submit"
			class="btn btn-link nav-link"
			data-bs-toggle="tooltip"
			title="<%= t('auth.logout') %>"
		>
			<i class="bi bi-box-arrow-right"></i>
			<span class="nav-text"><%= t('auth.logout') %></span>
		</button>
	</form>
</li>

<!-- views/layout.ejs -->

<!DOCTYPE html>
<html lang="<%= lang %>" dir="<%= dir %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- TODO: meta description/keywords per page later -->
    <meta name="description" content="" />
    <meta name="keywords" content="" />

    <title><%= typeof titleKey !== 'undefined' ? t(titleKey) : t('app.name') %></title>

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
    <link rel="manifest" href="/favicons/site.webmanifest" />
    <link rel="shortcut icon" href="/favicons/favicon.ico" />

    <!-- Bootstrap (CSS only in head) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />

    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- Static Styles and Scripts (future) -->

    <!-- Dynamic page styles -->
    <% const stylesArray = Array.isArray(styles) ? styles : []; %>
    <% stylesArray.forEach((style) => { %>
      <link rel="stylesheet" href="/css/<%= style %>.css" />
    <% }) %>

    <!-- Dynamic page scripts -->
    <% const scriptsArray = Array.isArray(scripts) ? scripts : []; %>
    <% scriptsArray.forEach((script) => { %>
      <script src="/js/<%= script %>.js" defer></script>
    <% }) %>
  </head>

  <body>
    <!-- Flash messages -->
    <% if (flash?.success?.length) { %>
      <div class="flash-message alert alert-success mb-0 rounded-0">
        <%= flash.success[0] %>
      </div>
    <% } %>

    <% if (flash?.error?.length) { %>
      <div class="flash-message alert alert-danger mb-0 rounded-0">
        <%= flash.error[0] %>
      </div>
    <% } %>

    <!-- Header (future partial) -->

    <main class="container">
      <%- body %>
    </main>

    <!-- Footer (future partial) -->

    <!-- Bootstrap JS (bundle) -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
      defer
    ></script>

    <!-- Generic i18n strings for client-side scripts -->
    <div id="i18n-generic" hidden>
      <span
        id="i18n-generic-error"
        data-message="<%= t('flash.errors.wrong') %>"
      ></span>
    </div>
  </body>
</html>

<!-- views/home/_services.ejs -->
<section id="services">
	<div class="container">
		<h2 class="text-center mb-5"><%= t('home:services.title') %></h2>

		<%
			const services = t('home:services.items');
			const serviceItems = Array.isArray(services) ? services : [];
		%>

		<div class="row">
			<% serviceItems.forEach((service) => { %>
				<div class="service-card col-md-4 mb-4">
					<div class="card shadow-sm text-center">
						<div class="card-body">
							<i
								class="bi <%= service.icon %> display-4 mb-4"
								aria-hidden="true"
							></i>

							<h3 class="card-title"><%= service.title %></h3>
							<p class="card-text"><%= service.description %></p>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</section>

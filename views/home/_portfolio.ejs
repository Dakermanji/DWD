<!-- views/home/_portfolio.ejs -->

<section id="portfolio">
	<div class="container">
		<h2 class="text-center mb-5"><%= t('home:portfolio.title') %></h2>

		<%
			const portfolio = t('home:portfolio.items');
			const items = Array.isArray(portfolio) ? portfolio : [];
		%>

		<div class="work-list">
			<% items.forEach((item) => { %>
				<div class="work text-center">
					<a href="/<%= item.link %>">
						<h4 class="mb-4 mt-3"><%= item.title %></h4>

						<img
							src="/images/index/projects/<%= item.img %>"
							alt="<%= t('screenshot_of', { title: item.title }) %>"
							loading="lazy"
							decoding="async"
						/>
					</a>
				</div>
			<% }) %>
			<div class="work text-center">
					<span>
						<h4 class="mb-4 mt-3"><%= t('home:portfolio.under_construction.title') %></h4>

						<img
							src='/images/index/projects/under_construction_<%= lang %>.png'
							alt="<%= t('home:portfolio.under_construction.imgAlt') %>"
							loading="lazy"
							decoding="async"
						/>
					</span>
				</div>
		</div>

		<div class="text-center mt-4">
			<button
				id="see-more-btn"
				class="btn"
				aria-label="<%= t('home:portfolio.see_more_btn') %>"
				type="button"
			>
				<%= t('home:portfolio.see_more_btn') %>
			</button>
		</div>
	</div>
</section>
